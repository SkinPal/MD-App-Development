<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Skin Health Summary -->
    <TextView
        android:id="@+id/skin_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skin_type_normal"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/skin_conditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/conditions_acne_redness_wrinkles"
        android:textSize="16sp"/>

    <!-- Progress -->
    <TextView
        android:id="@+id/progress_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_32_41_progress"
        android:textSize="16sp"/>

    <!-- Product Recommendations -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/facial_wash_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Notes -->
    <TextView
        android:id="@+id/notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notes"
        android:textSize="16sp"/>
</LinearLayout>
