<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ivOnboardingImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/pic0"
        android:contentDescription="Onboarding Image"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/tvOnboardingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to SkinPal"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvOnboardingDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your personalized skincare assistant!"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="32dp"/>

</LinearLayout>
